Angular - upload-pdf.component.ts
typescript
Copy code
import { Component } from '@angular/core';
import { HttpClient } from '@angular/common/http';

@Component({
  selector: 'app-upload-pdf',
  templateUrl: './upload-pdf.component.html',
  styleUrls: ['./upload-pdf.component.css']
})
export class UploadPdfComponent {
  selectedFile: File;

  constructor(private http: HttpClient) {}

  onFileChanged(event) {
    this.selectedFile = event.target.files[0];
  }

  onUpload() {
    const uploadData = new FormData();
    uploadData.append('pdf', this.selectedFile, this.selectedFile.name);
    
    this.http.post<any>('http://localhost:5000/upload', uploadData).subscribe(
      res => {
        console.log(res);
        this.docType = res.docType;
        this.paragraphs = res.paragraphs;
      },
      err => console.error('Error:', err)
    );
  }
}
Angular - upload-pdf.component.html
html
Copy code
<div>
  <input type="file" (change)="onFileChanged($event)">
  <button (click)="onUpload()">Upload PDF</button>
</div>
